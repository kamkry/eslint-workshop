{
  "name": "eslint-plugin-workshop",
  "license": "MIT",
  "version": "1.0.0",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project .",
    "format": "prettier --write 'lib/**/*.ts' './test/**/*.ts'",
    "lint": "tslint --fix --project ./tsconfig.json",
    "prelint": "npm run format",
    "prepack": "npm install && npm run build",
    "test": "jest"
  },
  "publishConfig": {
    "registry": "https://artifactory.allegrogroup.com/artifactory/api/npm/npm-local"
  },
  "devDependencies": {
    "@types/eslint": "8.4.3",
    "@types/jest": "28.1.2",
    "@types/node": "15.14.0",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/experimental-utils": "^5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "@typescript-eslint/typescript-estree": "5.28.0",
    "eslint": "7.29.0",
    "husky": "4.3.0",
    "jest": "28.1.1",
    "jest-junit": "12.2.0",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.5",
    "typescript": "4.7.4"
  },
  "jest-junit": {
    "outputName": "test-results/unit-tests.xml"
  }
}
